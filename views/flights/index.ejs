<%- include('../partials/header') %>

<section id="flight-index">
    <table id="flight-table">
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight No.</th>
                <th>Departs</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(flight => { %>
                <tr style="<%= Date.now() > flight.departs ? 'color: red' : '' %>">
                    <td> <%= flight.airline %>  </td>
                    <td>  <%= flight.airport %> </td>
                    <td> <%= flight.flightNo %> </td>
                    <td> <%= `${flight.departs.toLocaleDateString("en-US")} : ${flight.departs.toLocaleTimeString("en-US")} ` %> </td>
                    <td><a href="/flights/<%= flight.id %>">Details</a></td>
                </tr>
            <% } ) %>
        </tbody>
    </table>
</section>

<%- include('../partials/footer') %>